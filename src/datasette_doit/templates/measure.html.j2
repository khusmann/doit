{% extends "base.html" %}

{% block title %}Measure: {{measure.name}}{% endblock %}

{% block body_class %}index{% endblock %}

{% block nav %}
    <p class="crumbs">
        <a href="{{ urls.instance() }}">home</a> /
        <a href="/-/measures">measures</a> /
        <a href="/-/measures/{{measure.name}}">{{measure.title}}</a>
    </p>
    {{ super() }}
{% endblock %}

{% block content %}
<div class="doit-main">
    <div class="doit-header">
        <h1>{{measure.title}}</h1>
        <h2>Description:</h2>
        <p>{{measure.description}}</p>
    </div>
    {% for item in measure.items recursive %}
        {% if not item.value_type %}
        <div id="{{item.name}}" class="doit-group">
            {% if item.prompt %}<h3>{{item.prompt}}</h3>{% endif %}
            {{ loop(item.items) }}
        </div>
        {% else %}
        <div id="{{item.name}}" class="doit-item pure-g">
            <div class="pure-u-1-3">
                {{item.prompt}} {% if item.is_idx %}(Index){% endif %}
            </div>
            <div class="pure-u-1-3 doit-item-col">
                {{item.name}}
            </div>
            <div class="pure-u-1-3 doit-item-col">
                {{item.value_type}}
                {% if item.codes %}
                <span class="doit-instrument-map">(map)</span>
                <div class="doit-instrument-map-table">
                    <table class="pure-table pure-table-horizontal">
                    <thead>
                        <tr>
                            <th>Value</th>
                            <th>Tag</th>
                            <th>Text</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in item.codes.values %}
                        <tr>
                            <td>{{row.value}}</td>
                            <td>{{row.tag}}</td>
                            <td>{{row.text}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    </table>
                </div>
                {% endif %}
            </div>
        </div>
        {% endif %}
    {% endfor %}
</div>

{% endblock %}