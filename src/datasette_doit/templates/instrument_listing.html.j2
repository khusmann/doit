{% extends "base.html" %}

{% block title %}Instrument Listing{% endblock %}

{% block nav %}
    <p class="crumbs">
        <a href="{{ urls.instance() }}">home</a> /
        <a href="/-/instruments">instruments</a>
    </p>
    {{ super() }}
{% endblock %}

{% block body_class %}index{% endblock %}
{% block content %}
<h1>Instrument Listing</h1>

{% for instrument in listing.items %}
    <h2><a href="/-/instruments/{{instrument.name}}">{{instrument.title}}</a></h2>
{% endfor %}

{% endblock %}