{% extends "base.html" %}

{% block title %}Measure: {{measure.name}}{% endblock %}

{% block body_class %}index{% endblock %}

{% block nav %}
    <p class="crumbs">
        <a href="{{ urls.instance() }}">home</a>
        | <a href="/-/instruments">instruments</a>
        | <a href="/-/measures">measures</a>
    </p>
    {{ super() }}
{% endblock %}

{% block content %}
<h1>Measure ID: {{measure.name}}</h1>
<h1>Title: {{measure.title}}</h1>
<h1>Description:</h1>
<p>{{measure.description}}</p>
<br>
{% for entry in measure.items recursive %}
    {% set item = entry.content %}
    {% if item.type == 'group' or item.type == 'multiselect' %}
    <div style="border-style: dashed; border-width: 3px; padding: 1em" id="{{entry.name}}">
        <h2>{{entry.name}} {% if item.prompt %}: {{item.prompt}} {% endif %}</h2>
        {{ loop(item.items) }}
    </div>
    {% else %}
    <div style="border-style: dashed; border-width: 3px; padding: 1em" id="{{entry.name}}">
        <h2>
            {{item.prompt}} {% if item.is_idx %}(Index){% endif %}
        </h2>
        <p>Measure: {{entry.name}}</p>
        <p>Measure type: {{item.type}}</p>
        {% if item.codemap %}
        <table>
            <tr>
                <th>Value</th>
                <th>Tag</th>
                <th>Text</th>
            </tr>
            {% for row in item.codemap.values %}
            <tr>
                <td>{{row.value}}</td>
                <td>{{row.tag}}</td>
                <td>{{row.text}}</td>
            </tr>
            {% endfor %}
        </table>
        {% endif %}
    </div>
    {% endif %}
{% endfor %}

{% endblock %}